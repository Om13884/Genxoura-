# Database
# For PostgreSQL (Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/genxora?schema=public"

# For Supabase (alternative)
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# n8n Webhook Integration (SERVER-SIDE ONLY - DO NOT USE NEXT_PUBLIC_)
# Set this to your n8n base URL. The helper will automatically append webhook paths.
# Examples:
#   - Base URL: http://localhost:5678 (will append /webhook/contact and /webhook/pricing)
#   - Full webhook URL: http://localhost:5678/webhook-test/my-webhook
#
# NOTE: This must be set as N8N_WEBHOOK_BASE (NOT NEXT_PUBLIC_N8N_WEBHOOK_BASE)
# because webhook data is sent server-side for security.
N8N_WEBHOOK_BASE="http://localhost:5678"

# OpenRouter AI Integration
# Get your API key from https://openrouter.ai
OPENROUTER_API_KEY="sk-or-v1-..."

# SMTP Configuration (for email alerts)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Site URL (for OpenRouter referrer)
NEXT_PUBLIC_SITE_URL="https://genxora.com"

# Vercel Environment
VERCEL_ENV="production"

# Optional: Google Sheets Service Account (JSON key as string)
# GOOGLE_SHEETS_SERVICE_ACCOUNT='{"type":"service_account",...}'

